{
  "manifest_version": 3,
  "name": "Brave Capture - CLM Position Tracker",
  "version": "1.4.0",
  "description": "Track Concentrated Liquidity Market Maker (CLM) positions across 9 DeFi protocols with AI-powered extraction and automated quality control",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads",
    "alarms"
  ],
  
  "host_permissions": [
    "https://www.orca.so/*",
    "https://raydium.io/*",
    "https://aerodrome.finance/*",
    "https://app.cetus.zone/*",
    "https://hyperion.xyz/*",
    "https://app.beefy.com/*",
    "https://pancakeswap.finance/*",
    "https://app.uniswap.org/*",
    "https://uniswap.org/*",
    "https://app.ekubo.org/*",
    "https://ekubo.org/*",
    "https://app.hyperliquid.xyz/*",
    "https://app.aave.com/*",
    "https://app.morpho.org/*",
    "https://*.supabase.co/*",
    "https://api.anthropic.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["config.js", "supabase-client.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://www.orca.so/*",
        "https://raydium.io/*",
        "https://aerodrome.finance/*",
        "https://app.cetus.zone/*",
        "https://hyperion.xyz/*",
        "https://app.beefy.com/*",
        "https://pancakeswap.finance/*",
        "https://app.uniswap.org/*",
        "https://uniswap.org/*",
        "https://app.ekubo.org/*",
        "https://ekubo.org/*",
        "https://app.hyperliquid.xyz/*",
        "https://app.aave.com/*",
        "https://app.morpho.org/*"
      ],
      "js": ["wait-for-data.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
